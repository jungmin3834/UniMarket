<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:paddingHorizontal="28dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp">

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="31.7dp"
            android:layout_height="28.7dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:scaleType="fitXY"
            android:src="@drawable/btn_back" />
        <ImageView
            android:id="@+id/ganpan"
            android:layout_toRightOf="@+id/backButton"
            android:layout_toLeftOf="@id/guhaeText"
            android:scaleType="fitStart"
            android:src="@drawable/tagbutton_pet"
            android:layout_marginLeft="30dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="21dp" />
        <ImageView
            android:id="@+id/guhaeText"
            android:layout_width="66dp"
            android:layout_height="25dp"
            android:layout_toLeftOf="@id/findText"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/guhae" />
        <ImageView
            android:id="@+id/findText"
            android:layout_width="66dp"
            android:layout_height="25dp"
            android:layout_marginLeft="7dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/find" />
    </RelativeLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ListView
            android:id="@+id/listView"
            android:fillViewport="true"
            android:overScrollMode="never"
            android:scrollbars="none"
            android:focusableInTouchMode="false"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#ffffff"
            android:dividerHeight="10dp"></ListView>
    </LinearLayout>
</LinearLayout>