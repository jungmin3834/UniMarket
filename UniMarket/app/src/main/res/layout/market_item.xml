<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="5dp"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="163dp"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icon"
            android:layout_gravity="center_vertical"
            android:layout_width="122.6dp"
            android:layout_height="163dp"
            android:src="@drawable/move" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="65.3dp"
                android:layout_height="24.5dp"
                android:layout_gravity="center"
                android:src="@drawable/guhae" />

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="9dp">

                <ImageView
                    android:layout_width="8dp"
                    android:layout_height="11dp"
                    android:src="@drawable/mark_icon" />

                <TextView
                    android:id="@+id/address"
                    android:layout_marginLeft="9.3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:textSize="10sp"
                    android:textColor="#c6c6c6"
                    android:lineSpacingExtra="1.3sp"
                    android:text="대구광역시 달서구 진천동"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="32.1dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img1"
                    android:layout_width="20.4dp"
                    android:layout_height="32.1dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/hum_icon" />

                <ImageView
                    android:id="@+id/img2"
                    android:layout_width="20.4dp"
                    android:layout_height="32.1dp"
                    android:layout_marginLeft="9dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/hum_icon" />

                <ImageView
                    android:id="@+id/img3"
                    android:layout_width="20.4dp"
                    android:layout_height="32.1dp"
                    android:layout_marginLeft="9dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/hum_icon" />

                <ImageView
                    android:id="@+id/img4"
                    android:layout_width="20.4dp"
                    android:layout_height="32.1dp"
                    android:layout_marginLeft="9dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/hum_icon" />
            </LinearLayout>
            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:textSize="15sp"
                    android:textColor="#707070"
                    android:text="시급"/>
                <TextView
                    android:id="@+id/money"
                    android:layout_marginLeft="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:text="10000"
                    android:textSize="36sp"/>
                <TextView
                    android:text="원"
                    android:layout_marginLeft="5.3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquareroundb"
                    android:textSize="15sp"
                    android:textColor="#707070"
                    android:layout_gravity="center_vertical"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>


